type InputControlProps = {
  value: string;
  setValue: (value: string) => void;
  label: string;
  placeholder?: string;
};

const TextareaControl = ({
  value,
  setValue,
  label,
  placeholder,
}: InputControlProps) => (
  <FormControl>
    <FormLabel>{label}</FormLabel>
    <Textarea
      value={value}
      placeholder={placeholder}
      onInput={(e) => setValue(e.currentTarget.value)}
    />
  </FormControl>
);

const InputControl = ({
  value,
  setValue,
  label,
  placeholder,
}: InputControlProps) => (
  <FormControl>
    <FormLabel>{label}</FormLabel>
    <Input
      value={value}
      placeholder={placeholder}
      onInput={(e) => setValue(e.currentTarget.value)}
    />
  </FormControl>
);

type NumberControlProps = {
  value: number;
  setValue: (value: number) => void;
  label: string;
};

const NumberControl = ({ value, setValue, label }: NumberControlProps) => (
  <FormControl>
    <FormLabel>{label}</FormLabel>
    <NumberInput>
      <NumberInputField
        value={value}
        onInput={(e) => setValue(Number(e.currentTarget.value))}
      />
    </NumberInput>
  </FormControl>
);
